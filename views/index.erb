<h1>Jamesano Pizza Orders (<%= @pizzas.count() %>)</h1>

<% @pizzas.each do |pizza| %>
<article>
<p> Order ID: <%= pizza.id %></p>
<p>Name: <%= pizza.pretty_name() %></p>
<p>Order: <%= pizza.quantity() %> X <%= pizza.topping() %></p>

<div id="actions">
<form action="/pizzas/<%= pizza.id %>" method="GET">
  <input type="submit" value="Show" id="btn-get">
</form>

<form action="/pizzas/<%= pizza.id %>/edit" method="GET">
  <input type="submit" value="Edit" id="btn-edit">
</form>
<form action="/pizzas/<%= pizza.id %>/delete" method="POST">
  <input type="submit" value="âœ– Delete" id="btn-delete">
</div>
</form>
  <!-- <hr /> -->
</article>
  <%= print pizza %>
  <% end %>
